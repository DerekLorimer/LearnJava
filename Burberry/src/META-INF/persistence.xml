<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
 
  <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
   <class>com.database.Person</class>
    <properties>
       <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"></property>
       <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;DatabaseName=Staging;integratedSecurity=true;"></property>
       <property name="javax.persistence.jdbc.username" value="tomcat"></property>
       <property name="javax.persistence.jdbc.password" value="tomcat"></property>
       <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
       <property name="show_sql" value="true"/>
       <property name="tomee.jpa.cdi" value="false" />
      </properties>
  </persistence-unit>
  </persistence>